{
  "name": "evermark",
  "version": "0.7.0",
  "description": "A command line tool for syncing markdown files to Evernote üêò",
  "license": "MIT",
  "repository": "akuma/evermark",
  "author": "Weijia Huang <ihuangwj@gmail.com>",
  "bin": {
    "evermark": "bin/cli.js"
  },
  "engines": {
    "node": ">=4.0"
  },
  "scripts": {
    "clean": "rimraf build",
    "build": "npm run clean && babel src -d lib",
    "prepublish": "npm run build",
    "lint": "eslint src/*.js src/**/*.js --quiet --fix",
    "validate": "npm run lint && npm outdated --depth 0",
    "test": "nyc ava test/*.js",
    "test:watch": "npm test -- --watch",
    "coveralls": "nyc report --reporter=text-lcov | coveralls"
  },
  "files": [
    "bin",
    "lib",
    "themes"
  ],
  "keywords": [
    "cli",
    "command",
    "enml",
    "evernote",
    "markdown"
  ],
  "dependencies": {
    "babel-polyfill": "^6.13.0",
    "bluebird": "^3.4.1",
    "chalk": "^1.1.3",
    "cheerio": "^0.22.0",
    "co": "^4.6.0",
    "commander": "^2.9.0",
    "debug": "^2.2.0",
    "evernote": "^1.25.82",
    "fs-extra": "^0.30.0",
    "highlight.js": "^9.6.0",
    "inline-css": "^2.2.2",
    "markdown-it": "^8.0.0",
    "markdown-it-emoji": "^1.2.0",
    "markdown-it-enml-todo": "^1.0.1",
    "markdown-it-sub": "^1.0.0",
    "markdown-it-sup": "^1.0.0",
    "ora": "^0.3.0",
    "warehouse": "^2.2.0"
  },
  "devDependencies": {
    "ava": "*",
    "babel-cli": "^6.11.4",
    "babel-eslint": "^6.1.2",
    "babel-preset-es2015": "^6.13.2",
    "babel-preset-stage-0": "^6.5.0",
    "babel-register": "^6.11.6",
    "coveralls": "^2.11.12",
    "cz-conventional-changelog": "^1.2.0",
    "eslint": "^3.7.0",
    "eslint-config-airbnb-base": "^8.0.0",
    "eslint-plugin-import": "^1.13.0",
    "ghooks": "^1.3.2",
    "nyc": "^8.1.0",
    "rimraf": "^2.5.4",
    "sinon": "^1.17.5",
    "validate-commit-message": "^3.0.1"
  },
  "config": {
    "ghooks": {
      "pre-commit": "npm run lint && npm test",
      "commit-msg": "validate-commit-msg"
    },
    "commitizen": {
      "path": "cz-conventional-changelog"
    },
    "validate-commit-msg": {
      "helpMessage": "\nPlease fix your commit message (see http://npm.im/commitizen)\n",
      "types": [
        "feat",
        "fix",
        "docs",
        "style",
        "refactor",
        "perf",
        "test",
        "chore",
        "revert",
        "custom"
      ]
    }
  },
  "ava": {
    "babel": "inherit",
    "failFast": true,
    "require": [
      "babel-register",
      "babel-polyfill"
    ]
  }
}
